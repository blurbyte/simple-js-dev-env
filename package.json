{
  "name": "simple-js-dev-env",
  "version": "3.0.0",
  "description": "Simple JavaScript development environment for prototyping / testing new concepts",
  "main": "src/index.js",
  "author": "blurbyte",
  "repository": {
    "type": "git",
    "url": "https://github.com/blurbyte/simple-js-dev-env"
  },
  "keywords": [
    "javascript",
    "babel",
    "webpack2"
  ],
  "license": "mit",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "start": "npm-run-all --parallel test:watch open:dev lint:watch",
    "lint": "esw webpack.config.* src tools --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha tools/testSetup.js \"src/**/*.test.js\" --reporter progress",
    "test:watch": "npm run test -- --watch",
    "open:dev": "babel-node tools/devServer.js"
  },
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.10",
    "babel-preset-latest": "6.22.0",
    "babel-preset-stage-1": "6.22.0",
    "browser-sync": "2.18.7",
    "chai": "3.5.0",
    "eslint": "3.14.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-watch": "2.1.14",
    "mocha": "3.2.0",
    "npm-run-all": "3.1.1",
    "open": "0.0.5",
    "rimraf": "2.5.4",
    "webpack": "2.2.1",
    "webpack-dev-middleware": "1.9.0",
    "webpack-hot-middleware": "2.16.1"
  }
}
